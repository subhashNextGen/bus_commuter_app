<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--<item name="fontFamily">@font/cavier_dreams</item>-->
        <item name="android:fontFamily">@font/caviar_dreams_regular</item>
    </style>

    <style name="NewAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/caviar_dreams_regular</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="RadioButton1">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="CustomCardTopViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeApperanceOverlay_Card_Top</item>
    </style>

    <style name="ShapeApperanceOverlay_Card_Top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardBottomViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeApperanceOverlay_Card_Bottom</item>
    </style>

    <style name="ShapeApperanceOverlay_Card_Bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="CustomDialogue" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textStyle">bold</item>
        <item name="DialogTitleText">Please Wait</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">7</item>
    </style>

</resources>
